<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ex27_Maps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Style.App.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Style.App.AppBarLayout</item>
    </style>

    <style name="Style.App.AppBarLayout" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary" />

    <style name="Style.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>